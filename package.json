{
  "name": "figma-plugin-react-template",
  "version": "1.0.0",
  "description": "This plugin template uses Typescript. If you are familiar with Javascript, Typescript will look very familiar. In fact, valid Javascript code is already valid Typescript code.",
  "license": "ISC",
  "scripts": {
    "dev": "concurrently 'webpack --mode=development --watch' 'tailwindcss -i ./src/app/style/input.css -o ./src/app/style/style.css --watch'",
    "build": "webpack --mode=production",
    "watch:css": "tailwindcss -i ./src/app/style/input.css -o ./src/app/style/style.css --watch",
    "build:watch": "concurrently 'webpack --mode=development --watch' 'pnpm watch:css'",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}' "
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "firebase": "^12.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.12",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.50.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "concurrently": "^9.2.1",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^8.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-dev-utils": "^12.0.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^5.5.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
